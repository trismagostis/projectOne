<form method="POST" action="/blog/post/update/{{id}}">
    <input type="text" name="title" placeholder="Title" value="{{title}}"> <br>
    <textarea name="content" placeholder="Content">{{content}}</textarea> <br>

    {{#if isPublic}}
    <label><input type="checkbox" name="isPublic" value="true" checked>Publiczny</label><br>
    {{else}}
    <label><input type="checkbox" name="isPublic" value="true">Publiczny</label><br>
    {{/if}}
    <button>Update</button>
</form>